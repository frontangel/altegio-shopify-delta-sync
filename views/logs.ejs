<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <title>Webhook Logs</title>
    <style>
        body {
            font-family: sans-serif;
            background: #f9f9f9;
            padding: 0.5rem;
            font-size: 0.8rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: #fff;
            box-shadow: 0 0 8px rgba(0,0,0,0.05);
        }

        th, td {
            border: 1px solid #ddd;
            padding: 0.5rem 0.75rem;
            text-align: left;
            vertical-align: middle;
        }

        th {
            background-color: #f0f0f0;
        }

        tr:hover:not(.json-row) {
            background-color: #f5faff;
        }

        .json-content {
            display: none;
            background: #f5f5f5;
            padding: 12px;
            border-left: 1px solid #ccc;
            border-right: 1px solid #ccc;
            white-space: pre-wrap;
            margin: 0;
            font-family: monospace;
        }

        .json-toggle-btn {
            cursor: pointer;
            background: transparent;
            color: #007bff;
            border: none;
            padding: 0;
            font-size: 0.85rem;
            border-radius: 4px;
        }

        .json-row td {
            background: #fdfdfd;
            padding: 0;
            border: 0;
        }

        .status-cell {
            width: 80px;
        }

        .status-cell.success {
            color: green;
        }

        .status-cell.process {
            color: grey;
        }

        .status-cell.error {
            color: red;
        }

        .status-cell.skipped {
            color: grey;
        }

        .status-cell.new {
            color: #856404;
        }

        .text-center {
            text-align: center;
        }
        .w-260 { width: 260px; }
        .w-240 { width: 240px; }
        .w-140 { width: 140px; }
        .w-100 { width: 100px; }
        .w-60 { width: 60px; }
    </style>
</head>
<body>

<h2>Webhook Logs</h2>

<table>
    <thead>
    <tr>
        <th>ID</th>
        <th class="text-center">Date</th>
        <th class="text-center">Type</th>
        <th>Resource</th>
        <th class="text-center">Status</th>
        <th>Reason</th>
        <th class="text-center">Altegio SKU</th>
        <th class="text-center">Quantity</th>
        <th class="text-center">JSON</th>
    </tr>
    </thead>
    <tbody>
    <% logs.forEach((log, index) => { const jsonId = `json-${index}`; %>
        <tr>
            <td class="w-260"><%= log._id %></td>
            <td class="w-140 text-center"><%= log.date %></td>
            <td class="w-100 text-center"><%= log.type %></td>
            <td class="w-240"><%= log.resource %></td>
            <td class="status-cell text-center <%= log.status %>"><%= log.status %></td>
            <td><%= log.reason %></td>
            <td class="w-100 text-center"><%= log.altegio_sku %></td>
            <td class="w-100 text-center"><%= log.quantity %></td>
            <td class="w-100 text-center">
                <% if (log.json) { %>
                    <button class="json-toggle-btn" data-target="<%= jsonId %>">Показати</button>
                <% } %>
            </td>
        </tr>
        <tr class="json-row">
            <td colspan="11">
                <% if (log.json) { %>
                    <pre id="<%= jsonId %>" class="json-content"><%= JSON.stringify(JSON.parse(log.json), null, 2) %></pre>
                <% } %>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.json-toggle-btn');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.dataset.target;
        const el = document.getElementById(id);

        // Закриваємо всі інші
        document.querySelectorAll('.json-content').forEach(pre => {
          if (pre !== el) pre.style.display = 'none';
        });

        // Перемикаємо цільовий блок
        el.style.display = el.style.display === 'block' ? 'none' : 'block';
      });
    });
  });
</script>

</body>
</html>
